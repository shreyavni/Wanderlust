<% layout("/layouts/boilerplate.ejs") %>
    <!-- <h3>All Listings</h3> -->
     <style>
        #filters{
            display: flex;
            align-items: center;
            /* justify-content: space-evenly; */
        }
        .filter{
            text-align: center;
            margin-top: 2rem;
            margin-right: 2rem;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.8rem;
        }
        .tax-info{
            display: none;
        }
        .tax-switch{
           border: 1px solid black;
           border-radius: 1rem;
           height:3rem;
           padding: 0.8rem;
           margin-left: 3rem;
           display: flex;
           text-align: center;
        }
     </style>
     <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Ionic-cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-building"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Campaign</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mug-saucer"></i></div>
            <p>Breakfast</p>
        </div>
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>        </div>
        </div>
     </div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height:20rem">
                <div class="card-body">
                    <div class="card-img-overlay"></div>
                    <p class="card-text">
                        <b><%=listing.title%></b>
                        <br>
                            &#8377;<%= (listing.price !=null && typeof listing.price==='number' ) ? listing.price.toLocaleString("en-IN")
                                : 'Price not available' %> / night 
                                <div class="tax-info"><i>10% GST</i></div>
                    </p>
                </div>
            </div>
            </a>
            <%}%>
</div>

<script>
let taxSwitch=document.getElementById("switchCheckDefault");
taxSwitch.addEventListener("click",(req,res)=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo){
        if(taxInfo.style.display != "inline"){
             taxInfo.style.display = "inline";
        }
        else{
            taxInfo.style.display= "none";
        }
    }
})
</script>